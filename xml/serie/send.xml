<BPagBackOfficeWS>
  <Recorrencia>
    <Assinatura>
      <pessoal>
        <nome>##name##</nome>
        <cpfCnpj>##cpf_cnpj##</cpfCnpj>
        <telefone>##phone##</telefone>
        <e-mail>##email##</e-mail>
        <endereco>##address##</endereco>
        <numero>##address_number##</numero>
        <bairro>##address_burgh##</bairro>
        <cidade>##address_city##</cidade>
        <uf>##address_state##</uf>
        <cep>##address_zip##</cep>
        <celular>##cellphone##</celular>
        <login>##email##</login>
        <dataNascimento>##birthday##</dataNascimento>
      </pessoal>
      <serie>
        <codSerie>##id##</codSerie>
        <descontos>0</descontos>
        <diaPagamento>##pay_day##</diaPagamento>
        <sacado>
          <nome>##billing_name##</nome>
          <cpfCnpj>##billing_cpf_cnpj##</cpfCnpj>
          <telefone>##billing_phone##</telefone>
          <e-mail>##billing_email##</e-mail>
        </sacado>
        <plano>
          <novoPlano>
             <valor>##total_value##</valor>
             <periodicidade>##periodicity##</periodicidade>
             <numOcorrencias>##occurrences##</numOcorrencias>
          </novoPlano>
        </plano>
        <meioPagamento>
          <codigoFormaPagamento>##payment_method##</codigoFormaPagamento>
          <tipo>##payment_type##</tipo>
          <cartaoCredito>
            <numero>##payment_cc_number##</numero>
            <codigoVerificacao>##payment_cc_cvv##</codigoVerificacao>
            <dataValidade>##payment_cc_expire##</dataValidade>
            <bandeira>##payment_cc_brand##</bandeira>
            <titular>##payment_cc_holder##</titular>
            <cpfCnpj>##payment_cc_cpf_cnpj##</cpfCnpj>
          </cartaoCredito>
        </meioPagamento>
      </serie>
    </Assinatura>
  </Recorrencia>
